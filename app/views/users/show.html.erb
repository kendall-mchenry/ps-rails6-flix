<section class="user">
  <%= profile_image(@user) %>
  <h1><%= @user.name %></h1>
  <h4>@<%= @user.username %></h4>
  <p>
    Member Since <%= @user.created_at.strftime("%B %Y") %>
  </p>
  <h2><%= mail_to(@user.email) %></h2>

  <div class="actions">
    <%= link_to "Edit Account", edit_user_path(@user), class: "button edit" %>
    <%= link_to 'Delete Account', @user,
                data: { turbo_method: :delete, confirm: "Permanently delete your account!?" },
                class: "button delete" %>
  </div>
</section>